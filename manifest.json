{
	"manifest_version": 2,
	"name": "Imgurian Tweaks",
	"description": "Adds new features to imgur. You can change the loading gif, add back the upvote/downvote (ratings) bar, much more!",
	"version": "1.2.1",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"contextMenus",	
		"*://*.imgur.com/gallery/*"
	],
	"content_scripts": 
	[
		{
		"matches":["*://imgur.com/*"],
		"js":["js/jquery-2.1.3.min.js", "js/content.js"],
		"css": [],
		"run_at": "document_end"
		}
	],
	"background": {"scripts": ["js/background.js"]},
	"icons": { "16": "res/icon.png",
			   "48": "res/icon.png",
			  "128": "res/icon.png" },
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true,
		"open_in_tab": true
	}
}