{
	"manifest_version": 2,
	"name": "imgur++",
	"description": "Adds new features to imgur. Also changes the loading gif for imgur...",
	"version": "0.1",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"*://*.imgur.com/*"
	],
	"content_scripts": 
	[
		{
		"matches":["*://imgur.com/*"],
		"js":["js/jquery-2.1.3.min.js", "js/content.js"],
		"css": [],
		"run_at": "document_end"
		}
	],
	"background": {"scripts": ["js/background.js"]},
	"icons": { "16": "res/icon.png",
			   "48": "res/icon.png",
			  "128": "res/icon.png" },
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true,
		"open_in_tab": true
	}
}