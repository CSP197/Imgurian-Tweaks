{
	"manifest_version": 2,
	"name": "Imgurian Tweaks",
	"description": "Adds new features to imgur. You can change the loading gif, add back the upvote/downvote (ratings) bar, much more!",
	"version": "1.3.2",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"contextMenus",
		"*://*.imgur.com/*"
	],
	"content_scripts":
	[
		{
		"matches":["*://imgur.com/*"],
		"js":["js/zepto.min.js", "js/content.js", "js/messageloader.js"],
		"css": [],
		"run_at": "document_end"
		}
	],
	"browser_action": {
	      "default_icon": "res/16x16.png",
	      "default_popup": "popup/popup.html"
	},
	"background": {"scripts": ["js/zepto.min.js", "js/background.js"]},
	"icons": { "16": "res/16x16.png",
			   "48": "res/icon.png",
			  "128": "res/icon.png" },
	"options_ui": {
		"page": "options/options.html",
		"chrome_style": true,
		"open_in_tab": true
	},
	"web_accessible_resources": [
		"res/loader.gif",
		"res/marquee.png",
		"release_notes/index.html"
	]
}
